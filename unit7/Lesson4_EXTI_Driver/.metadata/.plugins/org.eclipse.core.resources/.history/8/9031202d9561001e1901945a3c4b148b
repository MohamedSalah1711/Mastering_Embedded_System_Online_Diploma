#include "Stm32f103C6_Driver_gpio.h"
#include "Stm32F103C6_EXTI_Driver.h"
#include "Lcd.h"
#include "Keypad.h"
void Enable_Clock();
void EXTI9_CallBack(void);
uint32 IRQ_Flag=0;
int main(void)
{
	Enable_Clock();
	LCD_init();
	LCD_clear_screen();
	EXTI_Pin_Config_t EXTI_CFG;
	EXTI_CFG.EXTI_Pin=EXTI9PB9;
	EXTI_CFG.trigger = Rising;
	EXTI_CFG.P_CallBack=EXTI9_CallBack;
	EXTI_CFG.IRQ_EN=Interrupt_Enable;
	MCAL_EXTI_GPIO_Init(&EXTI_CFG);
	IRQ_Flag=1;
	while(1){
		if(IRQ_Flag){
		LCD_clear_screen();
		IRQ_Flag=0;
		}
	}
}


void Enable_Clock(){
	ENABLE_CLOCK_GPIOA();
	ENABLE_CLOCK_GPIOB();
	ENABLE_CLOCK_AFIO();
}
void EXTI9_CallBack(void){
	IRQ_Flag=1;
	LCD_Send_String("IRQ EXTI9 IS HAPPEND _|- ");
}
